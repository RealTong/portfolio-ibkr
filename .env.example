# Server
PORT=3000
PORTFOLIO_TITLE=IBKR Portfolio

# Demo / mock mode (for screenshots)
PORTFOLIO_MOCK=false
MOCK_ACCOUNT_ID=U00000000
MOCK_SEED=0

# IBKR OAuth config file path (mounted into the container in Docker)
IBKR_OAUTH_PATH=oauth.json

# SQLite path for equity snapshots (persist this in Docker)
PORTFOLIO_DB_PATH=data/ibkr-portfolio.sqlite

# Optional: used as a fallback if some endpoints are called without ?accountId=
IBKR_ACCOUNT_ID=
